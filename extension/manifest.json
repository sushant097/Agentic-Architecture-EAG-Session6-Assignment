{
  "manifest_version": 3,
  "name": "AgenticGistâ€” Summarize and Extract Insights",
  "version": "1.1.0",
  "description": "Summarize any page and YouTube videos with a local FastAPI server (Gemini-ready).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "AgenticGist v2"
  },
  "permissions": ["activeTab", "scripting", "storage", "contextMenus", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
